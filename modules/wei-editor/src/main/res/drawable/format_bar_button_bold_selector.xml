<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" >
    <bitmap android:src="@drawable/format_bar_button_bold_highlight" android:tileMode="disabled" android:gravity="center" />
    </item>
    <item android:state_enabled="false" >
        <bitmap android:src="@drawable/format_bar_button_bold_disable" android:tileMode="disabled" android:gravity="center" />
    </item>
    <item >
        <bitmap android:src="@drawable/format_bar_button_bold" android:tileMode="disabled" android:gravity="center" />
    </item>
</selector>